def print_params(a=1,b='string',c=True):
    print(a,b,c)

print("******************************************")

#---------------------------------------------------Вызов с разным кол-вом аргументов
print_params(3,"false")
print_params(True, 5 ,"xdxd")
print_params(a = "десят", b = "чи девьят")
print_params(a = "Привет")
#---------------------------------------------------Вызов без аргументов
print_params()
#---------------------------------------------------

print("******************************************")

#---------------------------------------------------проверка на (b = 25) и (c = [1,2,3])
print_params(b=25)
print_params(c = [1,2,3])
#---------------------------------------------------

print("******************************************")

#-------------------------------------------------- передача и распаковка листа и словаря в функцию
values_list = [3,'XD',False]
values_dict = {'a' : 1 , 'b' : "XDXD", 'c' : True}

print_params(*values_list)
print_params(**values_dict)
#--------------------------------------------------

print("******************************************")

#-------------------------------------------------- создание второго списка и проверка на работу print_params(*values_list_2, 42)
values_list_2 = [54.32, 'Строка' ]

print_params(*values_list_2, 42)
#--------------------------------------------------
print("******************************************")
